<?xml version="1.0" encoding="utf-8"?>
	<form>
		<fieldset name="basic">
			<field  name="id"
					type="hidden"
					label="id"
					description="Item id"
					default="0"
					readonly="true"
					class="readonly"/>
			<field name="name"
					type="text"
					label="name"
					description="Item name"
					required="true"/>
			<field name="species"
					type="editor"
					label="species"
					description="Item species"
					required="true"/>
			<field name="size"
					type="text"
					label="size"
					description="Item size"
					required="true"/>
			<field name="age"
					type="integer"
					label="age"
					description="Item age"
					required="true"/>
		</fieldset>
	</form>